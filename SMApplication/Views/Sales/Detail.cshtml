@model Order
@{
    ViewData["Title"] = "Sales Detail Page";
}

<div class="container">
    <div class="row">
        <!-- BEGIN INVOICE -->
        <div class="col-xs-12">
            <div class="grid invoice">
                <div class="grid-body">
                    <div class="invoice-title">

                        <div class="row">
                            <div class="col-xs-12">
                                <h2>
                                    ORDER<br>
                                    <br />
                                    <span class="small">@Model.OrderId</span>
                                </h2>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-xs-6">
                            <address>
                                @*<strong>Billed To:</strong>*@<br>
                                Personal Identification :  @Model.PersonalIdentification<br>
                                Name : @Model.Fullname<br>
                                Address : @Model.Address<br>
                                District :  @Model.District<br>
                                City : @Model.City<br>
                                Postal Code : @Model.PostalCode<br>
                                Phone : @Model.Telephone
                            </address>
                        </div>

                        <div class="col-xs-6 float-right">
                            <address>
                                <strong>Order Date:</strong><br>
                                @Model.OrderDate.ToString("dd/MM/yyyy")
                            </address>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <address>
                                @* <strong>Payment Method:</strong><br>*@
                                Order Code : @Model.IntegrationOrderCode<br>
                                Status : @Model.OrderStatus<br>
                                Tax Authority : @Model.TaxAuthority<br>
                                Tax Number : @Model.TaxNumber<br>
                            </address>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-12">
                            <h3>ORDER DETAİL</h3>
                            <table class="table table-striped">
                                <thead>
                                    <tr class="line">
                                        <td><strong>#</strong></td>
                                        <td class="text-center"><strong>Product Name</strong></td>
                                        <td class="text-center"><strong>Price</strong></td>
                                        <td class="text-right"><strong>Quantity</strong></td>
                                        <td class="text-right"><strong>Cargo Company</strong></td>
                                        <td class="text-right"><strong>Cargo Date</strong></td>
                                       </tr>
                                </thead>
                                <tbody>
                                @foreach (var (index, order) in @Model.OrderDetails.Select((member, i) => (i + 1, member)))
                                {
                                    <tr>
                                        <td>@index</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => order.ProductName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => order.Price)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => order.Quantity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => order.CargoCompany)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => order.CargoDate.ToString("dd/MM/yyyy"))
                                        </td>
                                       
                                    </tr>
                                }
                                
                                @*<tr>
                                            <td colspan="3"></td>
                                            <td class="text-right"><strong>Taxes</strong></td>
                                            <td class="text-right"><strong>N/A</strong></td>
                                        </tr>
                                        <tr>
                                            <td colspan="3">
                                            </td>
                                            <td class="text-right"><strong>Total</strong></td>
                                            <td class="text-right"><strong>$2,400.00</strong></td>
                                        </tr>*@
                                </tbody>
                            </table>
                        </div>
                    </div>
                    @*<div class="row">
                            <div class="col-md-12 text-right identity">
                                <p>Designer identity<br><strong>Jeffrey Williams</strong></p>
                            </div>
                        </div>*@
                </div>
            </div>
        </div>
        <!-- END INVOICE -->
    </div>
</div>

