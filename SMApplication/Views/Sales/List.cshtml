    $(document).ready(function () {
        if ('@Model.Status' == '@Status.Error') {
            $( "#dialog-message" ).dialog({
                modal: true,
                buttons: {
                    Ok: function() {
                        $( this ).dialog( "close" );
                    }
                }
            });
        }
    });

</script>

